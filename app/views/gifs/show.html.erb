<div class="container mx-auto">
  <%= image_tag @gif.image_url %>

<p> Uploaded by <%= @gif.user.name %></p>
<p> <%= linked_tag_list @gif %> </p>

<div data-controller="clipboard">
  <%= text_field_tag nil, full_gif_url(@gif), data: { target: 'clipboard.source' } %>
  <button data-action="click->clipboard#copy"> Copy to clipboard </button>
</div>

<% if user_signed_in? && current_user == @gif.user %>
  <%= link_to 'Edit', edit_gif_path(@gif) %>
<% end %>
</div>
